{
    "name": "silverstripe/realme",
    "description": "Adds support to SilverStripe for authentication via RealMe (https://www.realme.govt.nz/)",
    "type": "silverstripe-vendormodule",
    "keywords": [
        "silverstripe",
        "authentication",
        "saml",
        "RealMe",
        "Real Me",
        "iGovt"
    ],
    "license": "BSD-3-Clause",
    "minimum-stability": "dev",
    "authors": [
        {
            "name": "Matt Peel",
            "email": "matt@silverstripe.com"
        },
        {
            "name": "Simon Gow",
            "email": "simon@silverstripe.com"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "silverstripe/framework": "4.13.x-dev",
        "onelogin/php-saml": "^3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3"
    },
    "extra": {
        "expose": [
            "client/javascript",
            "client/css",
            "client/images"
        ]
    },
    "autoload": {
        "psr-4": {
            "SilverStripe\\RealMe\\": "src/",
            "SilverStripe\\RealMe\\Tests\\": "tests/"
        }
    },
    "support": {
        "issues": "https://github.com/silverstripe/realme/issues"
    }
}